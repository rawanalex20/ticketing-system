<header class="w3-container" style="padding-top:22px">
  <div>
  <h6>
    <%= button_to "Invite", project_invite_url(project_id: @project.id), style:"float:right; display:inline;margin:0.5%;" %>
    <%= link_to "New ticket", new_project_ticket_path(project_id: @project.id), class:"w3-container w3-bar-item w3-button w3-padding", style:"float:right; display:inline;" %>

    <% button_to "Invite", project_share_project_path(project_id: @project.id), style:"float:right; display:inline" %>
  
    </h6>
  </div>
    <h1 ><b> <%= @project.project_name %> </b></h1>
    
<p style="color: green"><%= notice %></p>

</header>
<hr>
<% if @tickets.count == 0 %>
<div class="msg-empty">empty project</div>
<% end %>

<div id="tickets">
  <% @tickets.each do |ticket| %>
    <a href="/projects/<%=@project.id%>/tickets/<%=ticket.id%>">
    
      <span class="w3"><%= render ticket %></span>
    </a>
  <% end %>
  
</div>


