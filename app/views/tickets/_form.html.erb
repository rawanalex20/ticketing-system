<% is_attached = false %>
<% if request.env['PATH_INFO'] == "/projects/#{@ticket.project_id}/tickets/new"%> 
  <% url = "/projects/#{@ticket.project_id}/tickets" %>
<% elsif request.env['PATH_INFO'] == "/projects/#{@ticket.project_id}/tickets/#{@ticket.id}/attach"%> 
  <% url = "/projects/#{@ticket.project_id}/tickets/#{@ticket.id}/save_attach" %>
  <% is_attached = true %>
<% else %>
  <% url = "/projects/#{@ticket.project_id}/tickets/#{@ticket.id}" %>
<% end %>

<%= form_with(model:  [@ticket.project, @ticket], url: url) do |form| %>
  <% if ticket.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
        <% ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% unless is_attached %>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.radio_button :status, "ToDo",checked: true %>
    <%= form.label :status, "ToDo" %>
    <%= form.radio_button :status, "InProgress" %>
    <%= form.label :status, "InProgress" %>
    <%= form.radio_button :status, "Done" %>
    <%= form.label :status, "Done" %>

  </div>
  <% else %>
    <div> 
      <%= form.label :uploads, style: "display: block" %> 
      <%= form.file_field :uploads , multiple:true %> 
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :project_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  
<% end %>
